{
  "name": "@worklist/services",
  "version": "0.1.0",
  "description": "Worklist services",
  "type": "module",
  "main": "dist/server.js",
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.js",
      "typescript": "./src/server.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prebuild": "run-p lint clean:outputs",
    "build": "tsc -p ./tsconfig.json",
    "clean": "rm -rf .turbo node_modules",
    "clean:outputs": "rimraf ./dist",
    "dev": "run-p dev:start typecheck",
    "dev:start": "tsx watch --inspect --env-file=.env src/server.ts",
    "lint": "biome lint ./src",
    "format": "biome format ./src",
    "start": "node --env-file=.env --enable-source-maps dist/server.js",
    "typecheck": "tsc -p ./tsconfig.json --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.14.0",
    "fastify-tsconfig": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tsc-files": "^1.1.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@fastify/auth": "^5.0.2",
    "@fastify/autoload": "^6.3.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.2.2",
    "@t3-oss/env-core": "^0.13.6",
    "arecibo": "^4.0.2",
    "close-with-grace": "^2.2.0",
    "fastify": "^5.3.2",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "figlet": "^1.8.1",
    "nanoid": "^5.1.5",
    "zod": "^3.24.3",
    "zod-to-json-schema": "^3.24.5"
  }
}
