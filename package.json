{
  "name": "@panels/root",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo build",
    "bootstrap": "pnpm install",
    "check": "biome check .",
    "clean": "run-s clean:outputs clean:artifacts",
    "clean:artifacts": "rimraf --glob '**/coverage' && rimraf --glob '**/dist' && rimraf --glob '**/node_modules'",
    "clean:outputs": "turbo run clean",
    "clean:datastore": "rimraf ./dev/.datastore",
    "clean:all": "run-p clean clean:datastore",
    "commit": "git-cz",
    "dev": "turbo dev --parallel",
    "dev:app": "turbo dev --filter=@panels/app",
    "dev:docs": "turbo run docs:dev --parallel",
    "dev:services": "turbo dev --filter=@panels/services",
    "docs:validate": "node dev/scripts/validate-docs.js",
    "generate:env": "node dev/scripts/generate-env.js",
    "generate:env:prod": "node dev/scripts/generate-env.js production",
    "generate:env:staging": "node dev/scripts/generate-env.js staging",
    "format": "turbo format --continue --",
    "format:fix": "turbo format --continue -- --write",
    "info": "node --version && pnpm --version && turbo --version",
    "lint": "turbo lint --continue --",
    "lint:fix": "turbo lint --continue -- --apply",
    "typecheck": "turbo typecheck",
    "prepare": "husky",
    "run:infra:root": "docker compose up --build --remove-orphans -d wl-wait-for-dependencies",
    "run:infra": "turbo run run:infra:root",
    "run:infra:stop": "docker compose stop",
    "test": "turbo test"
  },
  "engines": {
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "node": "^22.16.0",
    "pnpm": "^10.11.0"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/config-pnpm-scopes": "^19.8.0",
    "@types/node": "^22.15.29",
    "@vitest/coverage-v8": "^3.2.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "fastify-tsconfig": "^3.0.0",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "yaml": "^2.6.1"
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": ["biome format --write"],
    "*.{js,jsx,ts,tsx}": ["biome lint --write"]
  }
}
