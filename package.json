{
  "name": "@worklist/root",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo build",
    "bootstrap": "pnpm install",
    "check": "biome check .",
    "clean": "run-s clean:outputs clean:artifacts",
    "clean:artifacts": "rimraf --glob '**/coverage' && rimraf --glob '**/dist' && rimraf --glob '**/node_modules'",
    "clean:outputs": "turbo run clean",
    "clean:datastore": "rimraf ./dev/.datastore",
    "clean:all": "run-p clean clean:datastore",
    "commit": "git-cz",
    "dev": "turbo dev --parallel",
    "format": "turbo format --continue --",
    "format:fix": "turbo format --continue -- --write",
    "info": "node --version && pnpm --version && turbo --version",
    "lint": "turbo lint --continue --",
    "lint:fix": "turbo lint --continue -- --apply",
    "typecheck": "turbo typecheck",
    "prepare": "husky",
    "run:infra:root": "docker compose up --build --remove-orphans -d wl-wait-for-dependencies",
    "run:infra": "turbo run run:infra:root",
    "run:infra:stop": "docker compose stop",
    "test": "turbo test"
  },
  "engines": {
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "node": "^22.16.0",
    "pnpm": "^10.11.0"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/config-pnpm-scopes": "^19.8.0",
    "@vitest/coverage-v8": "^3.2.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "fastify-tsconfig": "^3.0.0",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.0"
  },
  "dependencies": {
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
