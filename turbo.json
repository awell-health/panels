{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env", "tsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "@panels/docs#docs:build"],
      "outputs": [
        "dist/**",
        "node_modules/.cache/tsbuildinfo.json",
        ".next/**",
        ".vitepress/dist/**"
      ],
      "cache": true
    },
    "dev": {
      "dependsOn": ["//#run:infra:root", "build"],
      "persistent": true,
      "cache": false
    },
    "dev:services": {
      "dependsOn": ["//#run:infra:root", "@panels/services#build"],
      "persistent": true,
      "cache": false
    },
    "docs:build": {},
    "docs:dev": {},
    "format": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^topo"]
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    },
    "//#run:infra:root": {
      "cache": false
    },
    "migration:apply": {
      "cache": false
    },
    "migration:create": {
      "cache": false
    },
    "migration:reset": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build", "//#run:infra:root"],
      "cache": true
    }
  }
}
